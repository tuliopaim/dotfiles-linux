set number relativenumber
set showmode 

set ideajoin

" no bells
set visualbell
set noerrorbells

" vim shortcuts
sethandler <c-j> a:vim
sethandler <c-k> a:vim
sethandler <c-h> a:vim
sethandler <c-l> a:vim
sethandler <c-w> a:vim
sethandler <c-n> a:vim
sethandler <c-p> a:vim
sethandler <c-a> a:vim
sethandler <c-g> a:vim

" ide shortcuts
sethandler <c-f> a:ide
sethandler <c-r> a:ide
sethandler <c-c> a:ide
sethandler <c-v> a:ide

" map leader from , to space
let mapleader = "\<Space>"

" Window Navigation
nnoremap <leader>v :action SplitVertically<CR>
nnoremap <leader>b :action SplitHorizontally<CR>
nnoremap <leader>= :action Unsplit<CR>

nnoremap <leader>l :action MoveEditorToOppositeTabGroup<CR>

nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
nnoremap <c-k> <c-w>k
nnoremap <c-j> <c-w>j

nnoremap <c-s>h :action StretchSplitToLeft<CR>
nnoremap <c-s>l :action StretchSplitToRight<CR>
nnoremap <c-s>k :action StretchSplitToTop<CR>
nnoremap <c-s>j :action StretchSplitToBottom<CR>

noremap <leader>x :action CloseEditor<CR>
nnoremap <leader>ax :action CloseAllEditors<CR>
nnoremap <leader>gm :action Git.Menu<CR>

" Code editing
nnoremap <leader>r :action Refactorings.QuickListPopupAction<CR>
nnoremap ge :action ReSharperGotoNextErrorInSolution<CR>
nnoremap gE :action GotoPreviousError<CR>
nnoremap zc :action CollapseRegion<CR>
nnoremap zo :action ExpandRegion<CR>

nnoremap <leader>pt :action PinActiveTabToggle<CR>
nnoremap <leader>ha :action HideAllWindows<CR>

nnoremap gk gt
nnoremap gj gT

nnoremap <leader>zc :action CollapseAllRegions<CR>
nnoremap <leader>zo :action ExpandAllRegions<CR>

" dont paste the deleted value
nnoremap <leader>p "0p

nnoremap <leader>y "+y
vnoremap <leader>y "+y
nnoremap <leader>Y "+Y

nnoremap = :action AutoIndentLines<CR>

vnoremap < <gv
vnoremap > >gv

" Git
nnoremap <c-g> :action Vcs.QuickListPopupAction<CR>

" Source Code Navigation
set incsearch

nnoremap <c-p> :action GotoAction<CR>
nnoremap <c-t> :action GotoFile<CR>
nnoremap gr :action FindUsages<CR>
nnoremap gi :action GotoImplementation<CR>
nnoremap gd :action GotoDeclaration<CR>

" Terminal
nnoremap <leader>t :action ActivateTerminalToolWindow<CR>

" Build
nnoremap <leader>rs :action RebuildSolutionAction<CR>
nnoremap <leader>cs :action CleanSolutionAction<CR>
nnoremap <leader>rsp :action RebuildStartupProject<CR>

" NERDTree"
set NERDTree

let g:NERDTreeMapJumpParent='h'

nmap <Leader>. :NERDTreeFocus<CR>
map <Leader>e :NERDTreeToggle<CR>

" multiple-cursors

set multiple-cursors
